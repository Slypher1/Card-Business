<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="image">
        <item name="android:layout_marginTop">@dimen/margin_img</item>
        <item name="android:layout_marginLeft">@dimen/margin_img</item>
        <item name="android:layout_marginRight">@dimen/margin_img</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <style name="title">
        <item name="android:textSize">@dimen/title</item>
        <item name="android:textColor">@color/title</item>
        <item name="android:layout_marginTop">@dimen/margin_img</item>
        <item name="android:layout_marginLeft">@dimen/margin_img</item>
        <item name="android:layout_marginRight">@dimen/margin_img</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="information">
        <item name="android:layout_marginTop">@dimen/margin_img</item>
        <item name="android:layout_marginLeft">@dimen/margin_img</item>
        <item name="android:layout_marginRight">@dimen/margin_img</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="contact">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">@dimen/margin_contact</item>
    </style>

    <style name="icon">
        <item name="android:layout_width">@dimen/margin_img</item>
        <item name="android:layout_height">@dimen/margin_img</item>
        <item name="android:layout_marginRight">@dimen/margin_contact</item>
    </style>

    <style name="contact_text">
        <item name="android:textColor">@android:color/black</item>
    </style>
</resources>
